{
  "name": "@openmobilehub/auth-core",
  "description": "React Native OMH Auth - Core provides a comprehensive authentication solution for React Native applications. It offers a simple API to integrate authentication workflows seamlessly into both new and existing projects.",
  "version": "1.0.0",
  "main": "lib/commonjs/index.js",
  "react-native": "src/index.tsx",
  "source": "src/index.tsx",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/openmobilehub/react-native-omh-auth/tree/main/packages/core"
  },
  "license": "Apache-2.0",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "android/",
    "!android/.gradle",
    "!android/build"
  ],
  "peerDependencies": {
    "@react-native-async-storage/async-storage": "1.23.x",
    "react-native": "*",
    "react-native-app-auth": "7.x"
  },
  "devDependencies": {
    "@react-native-async-storage/async-storage": "^1.23.1",
    "react-native": "0.73.6",
    "react-native-app-auth": "^7.1.3",
    "react-native-builder-bob": "^0.23.2",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bob build",
    "typecheck": "tsc --noEmit"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ]
